{
  "ConnectionStrings": {
    "WalletGuardianDbConnectionString": "Server=localhost;Database=WalletGuardianAPIDb;User=root;Password=1234;Port=3306"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "./logs/log-.txt",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "Seq",
        "Application": "Wallet Guardian Backend",
        "Args": {
          "serverlUrl": "http://localhost:5341"
        }
      }
    ]
  },
  "AllowedHosts": "*"
}